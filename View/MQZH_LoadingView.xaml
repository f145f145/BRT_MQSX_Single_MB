<Window x:Class="MQZHWL.View.MQZH_LoadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MQZHWL.View"
        mc:Ignorable="d"
        Title="建筑幕墙综合物理性能检测装置 GB/T15227-2019 GB/T18250-2015 沈阳·宝瑞通"   
        Width="600" Height="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True">

    <!--普通按钮模板-->
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="NormalButton">
            <Border Background="LightGray" Name="back" BorderBrush="Black" BorderThickness="1"
                    CornerRadius="3" Padding="10"
                    TextBlock.Foreground="Black" TextBlock.FontSize="25" TextBlock.FontWeight="Bold">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="snow"></Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="gray"></Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Window.Background>
        <ImageBrush ImageSource="..\Data\Resources\Images\Loading.jpg"></ImageBrush>
    </Window.Background>

    <Grid x:Name="Grid1">
        <Label Name="Info" Content="启动成功！" Margin="65,99,10,0" FontSize ="36" Foreground ="Brown" Height="76" VerticalAlignment="Top"/>

        <Button Name ="ReAuthorize"  Content="重新注册" Click="Button_ReReg_Click" Template="{StaticResource NormalButton}" Height="60" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="90,220,324,91"/>
        <Button Content="退  出" Click="Button_Quit_Click" Template="{StaticResource NormalButton}" Height="60" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="345,220,69,91"/>
       
    </Grid>
</Window>