<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MQDFJ_MB.View.ExpViews"
        xmlns:MQDFJ_MB="clr-namespace:MQDFJ_MB" x:Class="MQDFJ_MB.View.ExpViews.MQZH_ExpManagerView"
        xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="幕墙四性-试验管理" 
        Width ="800" Height ="600"
        WindowStartupLocation="CenterScreen" Background="White" ShowInTaskbar="True" ResizeMode="NoResize"
        Closing="Window_Closing" WindowState="Normal" 
        DataContext ="{Binding Source ={StaticResource Locator},Path =Main_ViewModel}" >

    <Window.Resources>
        <!--普通按钮模板-->
        <ControlTemplate TargetType="{x:Type Button}" x:Key="Button1">
            <Border Margin ="10,5,10,5" Background="LightGray" x:Name="back" BorderBrush="Black" BorderThickness="0.8"
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Black" TextBlock.FontSize="18" Width="120" Height ="45">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="snow"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="CadetBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--ListBox模板，列表项-->
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="border" CornerRadius="0" Margin="2" BorderBrush="Black"
                                        BorderThickness="0,0,0,0.2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="10,0,0,0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="#FF46679A" />
                                <Setter TargetName="border" Property="Background" Value="white" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF46679A" />
                                <Setter TargetName="border" Property="BorderThickness" Value="4,0,0,0.5" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsSelected" Value="False" />
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Foreground" Value="#FF46679A" />
                                    <Setter TargetName="border" Property="Background" Value="white" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF46679A" />
                                    <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,0.5" />
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Label模板1，列表名-->
        <Style x:Key="Label1" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <!--TextBox模板1，选中试验名-->
        <Style x:Key="TextBox1" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        </Style>
        <!--TextBox模板2，新建试验名-->
        <Style x:Key="TextBox2" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="GhostWhite"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid Background ="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--试验列表-->
        <Border Grid.Row="0" Grid.Column ="0" Grid.RowSpan ="5" BorderBrush="Black" BorderThickness="1" CornerRadius="5"  HorizontalAlignment="stretch" VerticalAlignment="stretch" Margin="5">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="试验列表" Grid.Row="0" Style="{StaticResource Label1}"/>
                <ListBox  ItemsSource="{Binding ExpListTable}" SelectedValue ="{Binding SelectedExpNOStr}" SelectedIndex ="{Binding SelectedIndex,Mode =TwoWay}"  SelectedValuePath="试验编号" DisplayMemberPath="试验编号" Grid.Row="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
            </Grid>
        </Border>

        <!--关闭试验-->
        <Border Grid.Row="0" Grid.Column ="1" BorderBrush="Black" BorderThickness="1" CornerRadius="5"  Margin="5" Background="LightSkyBlue" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="当前试验：" Grid.Row="0"  Grid.Column="0" Style="{StaticResource Label1}" ToolTip="当前正在进行的检测试验"/>
                <TextBox Text="{Binding PublicData.ExpDQ.ExpSettingParam.ExpNO}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}" Foreground="Black" IsReadOnly="True" VerticalAlignment ="Bottom" ToolTip="当前正在进行的检测试验" Background="LightGray"/>
                <Button Content="关闭当前试验" Command="{Binding ExpManCommand}" CommandParameter="5" Grid.Row="1"  Grid.Column ="1" Height="45" Width="150" ToolTip="关闭当前试验后载入默认试验DefaultExp" FontSize="16" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!--载入、删除试验-->
        <Border Grid.Row="1" Grid.Column ="1" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5" Background="LightSkyBlue" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="选中的试验：" Grid.Row="0"  Grid.Column="0" Style="{StaticResource Label1}"/>
                <TextBox Text="{Binding SelectedExpNOStr}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}" Grid.ColumnSpan="3" IsReadOnly="True" />
                <Button Content="载入选中试验" Command="{Binding ExpManCommand}" CommandParameter="3" Grid.Row="1" Grid.Column ="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="45" Width="110" VerticalAlignment="Center" IsDefault="True" FontSize="16" FontWeight="Bold"/>
                <Button Content="删除选中试验" Command="{Binding ExpManCommand}" CommandParameter="2" Grid.Row="1" Grid.Column ="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="45" Width="110" VerticalAlignment="Center" IsCancel="True" FontSize="16" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!--复制试验-->
        <Border Grid.Row="2" Grid.Column ="1" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5" Background="LightSkyBlue" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="选中的编号：" Grid.Row="0"  Grid.Column="0" Style="{StaticResource Label1}"/>
                <Label Content="新试验编号：" Grid.Row="1"  Grid.Column="0" Style="{StaticResource Label1}"/>
                <TextBox Text="{Binding SelectedExpNOStr}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}" IsReadOnly="True"/>
                <TextBox Text="{Binding ExpNOCopyNew, Mode=OneWayToSource}" Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox2}" ToolTip ="新的试验编号，英文字符、阿拉伯数字、连字符-或下划线，长度1～50"/>
                <Button Content="复制选中试验" Command="{Binding ExpManCommand}" CommandParameter="6" Grid.Row="2" Grid.Column ="1" Height="45" Width="110" FontSize="16" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!--新建试验-->
        <Border Grid.Row="3" Grid.Column ="1" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5" Background="LightSkyBlue" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="新试验编号：" Grid.Row="0"  Grid.Column="0" Style="{StaticResource Label1}"/>
                <TextBox Text="{Binding ExpNONew, Mode=OneWayToSource}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox2}" ToolTip ="新增试验编号，英文字符、阿拉伯数字、连字符-或下划线，长度1～50"  />
                <Button Content="新建试验" Command="{Binding ExpManCommand}" CommandParameter="1"  Grid.Row="1" Grid.Column ="1" Height="45" Width="110" FontSize="16" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>
