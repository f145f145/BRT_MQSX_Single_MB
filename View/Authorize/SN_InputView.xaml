<Window x:Class="MQZHWL.View.Authorize.SN_InputView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MQZHWL.View.Authorize"
        mc:Ignorable="d"
        Title="授权码验证" 
        Width="800" Height="350"
        ResizeMode ="CanMinimize"
        WindowStartupLocation="CenterScreen" Background="LightSkyBlue" ShowInTaskbar="True"
        DataContext ="{Binding Source ={StaticResource Locator },Path =LoadingViewModel}">

    <Window.Resources>
        <!--默认CheckBox样式-->
        <Style TargetType="CheckBox">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Tag">
                    <Setter.Value>
                        <SolidColorBrush Color="Black"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="bd" BorderBrush="Black" 
                                        BorderThickness="2" Margin="5,2">
                                    <Path x:Name="cp" Width="15" Height="15"  
                                          Stroke="Blue"  
                                          StrokeThickness="3"/>
                                </Border>
                                <ContentPresenter/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cp" Property="Data"  
                                            Value="M 0,6 L 6,12 12,0"/>
                                    <Setter TargetName="bd" 
                                            Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Blue"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
        <!--普通按钮模板-->
        <ControlTemplate TargetType="Button" x:Key="Button1">
            <Border Background="LightGray" Name="back" BorderBrush="Black" BorderThickness="0.8"
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Black" TextBlock.FontSize="18" Width="120" Height ="50">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="white"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="CadetBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--Label模板1，参数名-->
        <Style x:Key="Label1" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板3，参数单位-->
        <Style x:Key="Label3" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板4，标题-->
        <Style x:Key="Label4" TargetType="Label">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
        <!--Label模板5，输出状态文字-->
        <Style x:Key="Label5" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
        <!--TextBox模板2-->
        <Style x:Key="TextBox1" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid Margin ="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="申请码提取及授权验证" Grid.Row="0" Grid.Column ="0" Grid.ColumnSpan="8" Style="{StaticResource Label4}"/>
        <Label Content="提取申请码—>联系厂商获得授权码—>输入授权码完成验证。" Grid.Row="1" Grid.Column ="0" Grid.ColumnSpan="8"  Style="{StaticResource Label1}"/>
        <Label Content="软件类型：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
        <Label Content="授权码：" Grid.Row="3" Grid.Column ="0" Style="{StaticResource Label1}"/>
        <Label Content="申请码：" Grid.Row="4" Grid.Column ="0" Style="{StaticResource Label1}"/>

        <Label Content="{Binding AppName}" Grid.Row="2" Grid.Column ="1" Grid.ColumnSpan="3"  Style="{StaticResource Label1}" Margin="118,0,-356,0"/>

        <TextBox Text="{Binding SNStr1, Mode =TwoWay}" ToolTip ="5位，数字或大写字母"  Grid.Row ="3" Grid.Column="1" Style="{StaticResource TextBox1}"/>
        <Label Content="—" Grid.Row="3" Grid.Column ="2" Style="{StaticResource Label1}"/>
        <TextBox Text="{Binding SNStr2, Mode =TwoWay}"  ToolTip ="5位，数字或大写字母"  Grid.Row ="3" Grid.Column="3" Style="{StaticResource TextBox1}"/>
        <Label Content="—" Grid.Row="3" Grid.Column ="4" Style="{StaticResource Label1}"/>
        <TextBox Text="{Binding SNStr3, Mode =TwoWay}"  ToolTip ="5位，数字或大写字母"  Grid.Row ="3" Grid.Column="5" Style="{StaticResource TextBox1}"/>
        <Label Content="—" Grid.Row="3" Grid.Column ="6" Style="{StaticResource Label1}"/>
        <TextBox Text="{Binding SNStr4, Mode =TwoWay}"  ToolTip ="5位，数字或大写字母"  Grid.Row ="3" Grid.Column="7" Style="{StaticResource TextBox1}"/>

        <TextBox Text="{Binding ReqStr, Mode =TwoWay}"  ToolTip ="将申请码提交给厂商，以获取授权码！"  Grid.Row ="4" Grid.Column="1"  Grid.ColumnSpan="3" IsReadOnly ="True"  Style="{StaticResource TextBox1}" Width="320"/>
        <Button Content="验证授权码" Command="{Binding RegCommand}" CommandParameter="1" Grid.Row="4" Grid.Column ="5" Template="{StaticResource Button1}"/>
        <Button Content="退出" Command="{Binding RegCommand}" CommandParameter="2"  Grid.Row="4" Grid.Column ="7" Template="{StaticResource Button1}"/>
    </Grid>
</Window>
