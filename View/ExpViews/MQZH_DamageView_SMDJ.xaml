<Window x:Class="MQZHWL.View.ExpViews.MQZH_DamageView_SMDJ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MQZHWL.View.ExpViews"
              xmlns:converterPath="clr-namespace:MQZHWL.UICtl.Converter"
        mc:Ignorable="d"
        Title="幕墙四性—水密定级检测损坏情况确认" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" Background="White" ShowInTaskbar="True" ResizeMode ="NoResize"
        Closing="Window_Closing" 
        DataContext ="{Binding Source ={StaticResource Locator },Path =Main_ViewModel}">

    <Window.Resources>
        <!--普通按钮模板-->
        <ControlTemplate TargetType="{x:Type Button}" x:Key="Button1">
            <Border Margin ="10,5,10,5" Background="LightGray" x:Name="back" BorderBrush="Black" BorderThickness="0.8"
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Black" TextBlock.FontSize="18" Width="100" Height ="40">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="snow"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="CadetBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--Label模板1，参数名-->
        <Style x:Key="Label1" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,5,5,5"/>
        </Style>
        <!--Label模板2，提示信息-->
        <Style x:Key="Label2" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="Coral"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--TextBox模板1，参数信息-->
        <Style x:Key="TextBox1" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="360"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="GhostWhite"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        </Style>
        <converterPath:BoolToVisibilityConverter x:Key="BVConverter"/>
    </Window.Resources>

    <Grid Background ="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" Grid.Row="0" Grid.Column ="0"  BorderThickness="1" CornerRadius="5"  HorizontalAlignment="stretch" VerticalAlignment="stretch" Margin="10"  Visibility ="{Binding ExpDQ.ExpSettingParam.Isexp_SJ_WithKKQ, Converter={StaticResource BVConverter}}">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="水密定级检测 可开启部分损坏情况" Margin ="5"  Grid.Row="0" Grid.Column ="0" FontSize ="20" FontWeight="Bold"  Grid.ColumnSpan ="3" Style="{StaticResource Label2}" HorizontalAlignment ="Center" Foreground="Black"/>
                <Label Content="第1级：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第2级：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第3级：" Grid.Row="3" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第4级："  Grid.Row="4" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第5级：" Grid.Row="5" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第6级：" Grid.Row="6" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第7级：" Grid.Row="7" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第8级："  Grid.Row="8" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[0], Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[1], Mode=TwoWay}" Grid.Row="2" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[2], Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[3], Mode=TwoWay}" Grid.Row="4" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[4], Mode=TwoWay}" Grid.Row="5" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[5], Mode=TwoWay}" Grid.Row="6" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[6], Mode=TwoWay}" Grid.Row="7" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_KKQ_temp[7], Mode=TwoWay}" Grid.Row="8" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[0], Mode=TwoWay}"  Grid.Row="1" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[1], Mode=TwoWay}"  Grid.Row="2" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[2], Mode=TwoWay}"  Grid.Row="3" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[3], Mode=TwoWay}"  Grid.Row="4" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[4], Mode=TwoWay}"  Grid.Row="5" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[5], Mode=TwoWay}"  Grid.Row="6" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[6], Mode=TwoWay}"  Grid.Row="7" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_KKQ_temp[7], Mode=TwoWay}"  Grid.Row="8" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
            </Grid>
        </Border>
        <Border BorderBrush="Black" Grid.Row="0" Grid.Column ="1"  BorderThickness="1" CornerRadius="5"  HorizontalAlignment="stretch" VerticalAlignment="stretch" Margin="10">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="水密定级检测 固定部分损坏情况" Margin ="5"  Grid.Row="0" Grid.Column ="0" FontSize ="20" FontWeight="Bold"  Grid.ColumnSpan ="3" Style="{StaticResource Label2}" HorizontalAlignment ="Center" Foreground="Black"/>
                <Label Content="第1级：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第2级：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第3级：" Grid.Row="3" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第4级："  Grid.Row="4" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第5级：" Grid.Row="5" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第6级：" Grid.Row="6" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第7级：" Grid.Row="7" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <Label Content="第8级："  Grid.Row="8" Grid.Column ="0" Style="{StaticResource Label1}"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[0], Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[1], Mode=TwoWay}" Grid.Row="2" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[2], Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[3], Mode=TwoWay}" Grid.Row="4" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[4], Mode=TwoWay}" Grid.Row="5" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[5], Mode=TwoWay}" Grid.Row="6" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[6], Mode=TwoWay}" Grid.Row="7" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <ComboBox ItemsSource="{Binding ExpDQ.ExpData_SM.SLTypeListSM}" SelectedValuePath ="TypeID"  DisplayMemberPath="Sign" SelectedIndex="{Binding ExpDQ .ExpData_SM.SLStatus_DJ_GD_temp[7], Mode=TwoWay}" Grid.Row="8" Grid.Column ="1" FontSize ="20" HorizontalContentAlignment ="Center" VerticalContentAlignment ="Center" Height ="40"  Margin ="5"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[0], Mode=TwoWay}"  Grid.Row="1" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[1], Mode=TwoWay}"  Grid.Row="2" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[2], Mode=TwoWay}"  Grid.Row="3" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[3], Mode=TwoWay}"  Grid.Row="4" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[4], Mode=TwoWay}"  Grid.Row="5" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[5], Mode=TwoWay}"  Grid.Row="6" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[6], Mode=TwoWay}"  Grid.Row="7" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
                <TextBox Text="{Binding ExpDQ .ExpData_SM.SLPS_DJ_GD_temp[7], Mode=TwoWay}"  Grid.Row="8" Grid.Column ="2" Style="{StaticResource TextBox1}"/>
            </Grid>
        </Border>

        <Button Content="保存结果" Command="{Binding SMCommand}" CommandParameter="2104" Grid.Row="1" Grid.Column ="1" Template="{StaticResource Button1}" HorizontalAlignment="Center" VerticalAlignment="Center" IsDefault="True"/>
        <Label Content="各级检测结束后，请仔细检查试件及连接件有无损坏或功能障碍！" Margin ="10"  Grid.Row="1" Grid.Column ="0" Grid.ColumnSpan="2" Style="{StaticResource Label2}"/>
    </Grid>
</Window>