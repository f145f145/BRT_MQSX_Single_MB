<Window x:Class="MQDFJ_MB.View.ExpViews.MQZH_ExpKFYp2View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MQDFJ_MB.View.ExpViews"
        xmlns:converterPath="clr-namespace:MQDFJ_MB.UICtl.Converter"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:popup="clr-namespace:MQDFJ_MB.View"
        mc:Ignorable="d"
        Title="幕墙四性-抗风压p2反复加压检测" 
        Width="1600" Height="850" MinWidth="1280" MinHeight="850"
        WindowStartupLocation="CenterScreen" Background="White" ShowInTaskbar="True"
        Closing="Window_Closing" WindowState="Maximized"
        DataContext ="{Binding Source ={StaticResource Locator },Path =Main_ViewModel}">

    <Window.Resources>
        <!--紧急停机按钮模板-->
        <ControlTemplate TargetType="Button" x:Key="EmStpButton">
            <Border Background="Yellow" Name="back" BorderBrush="Red" BorderThickness="1"
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Red" TextBlock.FontSize="18" TextBlock.FontWeight="Bold"
                    Width="100" Height ="50">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="Aqua"/>
                    <Setter Property="TextElement.Foreground" TargetName="back" Value="Red"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="BlueViolet"/>
                    <Setter Property="TextElement.Foreground" TargetName="back" Value="White"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--普通按钮模板-->
        <ControlTemplate TargetType="Button" x:Key="Button1">
            <Border Background="LightGray" Name="back" BorderBrush="Black" BorderThickness="0.8" 
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Black" TextBlock.FontSize="18" Width="120" Height ="50">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="snow"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="CadetBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--渗漏停机按钮模板-->
        <ControlTemplate TargetType="Button" x:Key="Button2">
            <Border Background="DeepSkyBlue" Name="back" BorderBrush="Black" BorderThickness="0.8"
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Black" TextBlock.FontSize="18" Width="150" Height ="50">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="snow"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="CadetBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--默认复选框样式-->
        <Style TargetType="RadioButton">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Tag">
                    <Setter.Value>
                        <SolidColorBrush Color="Black"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="bd" BorderBrush="Black" 
                                        BorderThickness="2" Margin="5,2">
                                    <Path x:Name="cp" Width="15" Height="15"  
                                          Stroke="Blue"  
                                          StrokeThickness="3"/>
                                </Border>
                                <ContentPresenter/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cp" Property="Data"  
                                            Value="M 0,6 L 6,12 12,0"/>
                                    <Setter TargetName="bd" 
                                            Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Blue"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
        <!--默认CheckBox样式-->
        <Style TargetType="CheckBox">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Tag">
                    <Setter.Value>
                        <SolidColorBrush Color="Black"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="bd" BorderBrush="Black" 
                                        BorderThickness="2" Margin="5,2">
                                    <Path x:Name="cp" Width="15" Height="15"  
                                          Stroke="Blue"  
                                          StrokeThickness="3"/>
                                </Border>
                                <ContentPresenter/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cp" Property="Data"  
                                            Value="M 0,6 L 6,12 12,0"/>
                                    <Setter TargetName="bd" 
                                            Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Blue"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
        <!--Label模板1，参数名-->
        <Style x:Key="Label1" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="{StaticResource HeiTi}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板2，参数值-->
        <Style x:Key="Label2" TargetType="Label">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="{DynamicResource DigifaceWide}"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板3，参数单位-->
        <Style x:Key="Label3" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板4，试验信息-->
        <Style x:Key="Label4" TargetType="Label">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
        </Style>
        <!--Label模板5,完成状态-->
        <Style x:Key="Label5" TargetType="Label">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="30"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <!--Label模板7，参数单位-->
        <Style x:Key="Label7" TargetType="Label">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板8，参数单位-->
        <Style x:Key="Label8" TargetType="Label">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Label模板6，检测阶段步骤-->
        <Style x:Key="Label6" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,5,5"></Setter>
        </Style>
        <!--圆圈模版1，绿色-->
        <Style x:Key="Ellipse1" TargetType="Ellipse">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Fill" Value="Chartreuse"/>
        </Style>
        <!--圆圈模版2，无色-->
        <Style x:Key="Ellipse2" TargetType="Ellipse">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="Fill" Value="DarkGray"/>
        </Style>
        <!--值转换器-->
        <converterPath:BoolToExpTypeConverter x:Key="ExpTypeConverter"/>
        <converterPath:BoolToExpCompleteConverter x:Key="ExpCompleteConverter"/>
        <converterPath:BoolToDevStatusWZConverter x:Key="DevStatusWzConverter"/>
        <converterPath:BoolToVisibilityConverter x:Key="BVConverter"/>
        <converterPath:BoolToVisibilityNotConverter x:Key="BVNotConverter"/>
        <converterPath:BoolToCollorGConverter x:Key="BGConverter"/>
        <converterPath:BoolToCollorOConverter x:Key="BOConverter"/>
        <converterPath:BoolToWaveConverter x:Key="BCWaveonverter"/>
        <converterPath:StrToCollorOConverter x:Key="SGBOConverter"/>

        <converterPath:IntToFFModeConverter x:Key="FFModeConverter"/>
        <converterPath:IntToFFErrConverter x:Key="FFErrConverter"/>
        <converterPath:IntToFFSTConverter x:Key="FFSTConverter"/>
        <converterPath:IntToFFSDConverter x:Key="FFSDConverter"/>
        <converterPath:IntToFFZDZBConverter x:Key="FFZDZBConverter"/>
        <converterPath:IntToFFFDZBConverter x:Key="FFFDZBConverter"/>
        <converterPath:IntToFFZBConverter x:Key="FFZBConverter"/>
        <converterPath:IntToFFFBConverter x:Key="FFFBConverter"/>
        <converterPath:IntToFFActionConverter x:Key="FFActionConverter"/>
    </Window.Resources>

    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" MinWidth="550"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition  Width="*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <!--=====菜单栏===================================================================================================-->
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left"  VerticalAlignment="Center" Height ="40">
            <MenuItem Header="试验操作"  FontSize="16"  Height ="40">
                <MenuItem Header="终止试验"  FontSize="16" Command="{Binding KFYCommand}" CommandParameter="1204" Height ="40" VerticalContentAlignment="Center"/>
                <MenuItem Header="修改试验请退出试验后在主窗口操作" IsEnabled="False" FontSize="16" Height ="40"/>
            </MenuItem>
            <MenuItem Header="试验数据"  FontSize="16" Height ="40">
                <MenuItem Header="定级检测损坏情况" Command="{Binding KFYCommand}" CommandParameter="7114" FontSize="16" Height ="40" VerticalContentAlignment="Center"/>
                <Separator Background="Black"  ></Separator>
                <MenuItem Header="工程检测损坏情况" Command="{Binding KFYCommand}" CommandParameter="7115" FontSize="16" Height ="40" VerticalContentAlignment="Center"/>
                <Separator Background="Black"  ></Separator>
                <MenuItem Header="当前试验数据" Command="{Binding KFYCommand}" CommandParameter="7104" FontSize="16" Height ="40" VerticalContentAlignment="Center"/>
                <MenuItem Header="修改试验设定请关闭窗口后在主窗口操作" IsEnabled="False" FontSize="18" Height ="40" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            </MenuItem>

            <MenuItem Header="调零标定"  FontSize="16" Height ="40">
                <MenuItem Header="传感器调零" Command="{Binding KFYCommand}" CommandParameter="7128"  FontSize="16" Height ="40"/>
            </MenuItem>

            <MenuItem Header="退出检测"  FontSize="16" Height ="40">
                <MenuItem Header="退出抗风压变形性能检测" Command="{Binding KFYCommand}" CommandParameter="7208" FontSize="16" Height ="40"/>
            </MenuItem>
        </Menu>

        <!--=====左半屏，参数状态显示、实时曲线===========================================================================-->
        <Grid Grid.Row="1" Grid.Column="0" VerticalAlignment="stretch">
            <Grid.RowDefinitions>
                <RowDefinition  Height="*" MinHeight="220"/>
                <RowDefinition Height="auto"/>
                <RowDefinition  Height="3*" MinHeight="300"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--左上屏，参数显示区块-->
            <Border Grid.Row="0" Margin="5" HorizontalAlignment="stretch" VerticalAlignment="stretch" CornerRadius="5" Background="LightGray">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="压力大：" Style="{StaticResource Label1}" Grid.Row="0" Grid.Column ="0"/>
                    <Label Content="风机频率：" Style="{StaticResource Label1}" Grid.Row="1" Grid.Column ="0"/>
                    <Label Content="{Binding Dev.AIList[14].ValueFinal,Mode=OneWay}" ContentStringFormat="{}{0:0}" Style="{StaticResource Label2}" Grid.Row="0" Grid.Column ="1"/>
                    <Label Content="{Binding Dev.AIList[22].ValueFinal,Mode=OneWay}" ContentStringFormat="{}{0:0.0}" Style="{StaticResource Label2}" Grid.Row="1" Grid.Column ="1"/>
                    <Label Content="Pa" Style="{StaticResource Label3}" Grid.Row="0" Grid.Column ="2"/>
                    <Label Content="Hz" Style="{StaticResource Label3}" Grid.Row="1" Grid.Column ="2"/>
                    <Label Content="{Binding Dev.AIList[12].ValueFinal,Mode=OneWay}" ContentStringFormat="{}{0:0}" Style="{StaticResource Label2}" Grid.Row="2" Grid.Column ="1"/>

                    <Label Content="主管蝶阀：" Style="{StaticResource Label1}" Grid.Row="0" Grid.Column ="3" />
                    <Label Content="KM1状态：" Style="{StaticResource Label1}" Grid.Row="1" Grid.Column ="3" />
                    <Label Content="风机变频器：" Style="{StaticResource Label1}" Grid.Row="2" Grid.Column ="3" />
                    <Label Content="气泵状态：" Style="{StaticResource Label1}" Grid.Row="3" Grid.Column ="3" />
                    <Ellipse Fill="{Binding Dev.DIList[0].IsOn,Mode=OneWay, Converter={StaticResource BGConverter}}" Style="{StaticResource Ellipse2}" Grid.Row="0" Grid.Column ="4"/>
                    <Ellipse Fill="{Binding Dev.DIList[5].IsOn,Mode=OneWay, Converter={StaticResource BGConverter}}" Style="{StaticResource Ellipse2}" Grid.Row="1" Grid.Column ="4"/>
                    <Ellipse Fill="{Binding Dev.DIList[8].IsOn,Mode=OneWay, Converter={StaticResource BGConverter}}" Style="{StaticResource Ellipse2}" Grid.Row="2" Grid.Column ="4"/>
                    <Ellipse Fill="{Binding Dev.DIList[7].IsOn,Mode=OneWay, Converter={StaticResource BGConverter}}" Style="{StaticResource Ellipse2}" Grid.Row="3" Grid.Column ="4"/>
                    <Label Content="{Binding Dev.DIList[0].WZ,Mode=OneWay}" Style="{StaticResource Label1}" Grid.Row="0" Grid.Column ="5"/>
                    <Label Content="{Binding Dev.DIList[5].WZ,Mode=OneWay}" Style="{StaticResource Label1}" Grid.Row="1" Grid.Column ="5"/>
                    <Label Content="{Binding Dev.DIList[8].WZ,Mode=OneWay}" Style="{StaticResource Label1}" Grid.Row="2" Grid.Column ="5"/>
                    <Label Content="{Binding Dev.DIList[7].WZ,Mode=OneWay}" Style="{StaticResource Label1}" Grid.Row="3" Grid.Column ="5"/>

                    <Label Content="风阀模式：" Style="{StaticResource Label1}" Grid.Row="0" Grid.Column ="6" />
                    <Label Content="风阀正压：" Style="{StaticResource Label1}" Grid.Row="1" Grid.Column ="6" />
                    <Label Content="风阀负压：" Style="{StaticResource Label1}" Grid.Row="2" Grid.Column ="6" />
                    <Ellipse Fill="{Binding Dev.Valve.DIList[5].IsOn,Mode=OneWay, Converter={StaticResource BGConverter}}" Style="{StaticResource Ellipse2}" Grid.Row="1" Grid.Column ="7"/>
                    <Ellipse Fill="{Binding Dev.Valve.DIList[6].IsOn,Mode=OneWay, Converter={StaticResource BGConverter}}" Style="{StaticResource Ellipse2}" Grid.Row="2" Grid.Column ="7"/>
                    <Label Content="{Binding Dev.Valve.FFMode,Mode=OneWay, Converter={StaticResource FFModeConverter}}" Style="{StaticResource Label1}" Grid.Row="0" Grid.Column ="8"/>
                    <Label Content="{Binding Dev.Valve.DIList[5].WZ,Mode=OneWay}" Style="{StaticResource Label1}" Grid.Row="1" Grid.Column ="8"/>
                    <Label Content="{Binding Dev.Valve.DIList[5].WZ,Mode=OneWay}" Style="{StaticResource Label1}" Grid.Row="2" Grid.Column ="8"/>

                    <Button Grid.Row="0" Grid.Column="7" Height="40" Width="40" Padding="0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"
                            BorderBrush="{x:Null}"  ToolTip ="阀门详细状态" Click="FFStatusButtonClick">
                        <Button.Content>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text=" ?" FontSize="30" Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Popup x:Name="FFStatusPopup" StaysOpen="False">
                                    <popup:FFStatusView HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </Popup>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </Border>

            <!--横向分割线-->
            <GridSplitter Grid.Row="1"  Height="3" VerticalAlignment="Center" HorizontalAlignment="stretch"/>

            <!--左下屏，场景及曲线图区块-->
            <TabControl HorizontalAlignment="stretch" VerticalAlignment="stretch" Margin="10" Grid.Row="2"  >
                <TabItem Header="【实时曲线】" FontSize="15" Padding="5" IsEnabled="True" >
                    <d3:ChartPlotter x:Name="MQWL_ChartPlotter"  Margin="5,5,5,5" >
                        <d3:VerticalAxisTitle x:Name="AxisY_Default_Title" Content="检测值"/>
                        <d3:HorizontalAxisTitle x:Name="AxisX_Title" Content="时间"/>
                        <d3:AxisGrid Visibility ="Hidden"></d3:AxisGrid>
                        <!--添加曲线-->
                        <d3:LineGraph Name="LineKFY01" StrokeThickness="0.6" DataSource="{Binding PlotLines[2].LineDataSource}" Stroke ="Red"></d3:LineGraph>
                        <d3:LineGraph Name="LineKFY02" StrokeThickness="0.6" DataSource="{Binding PlotLines[23].LineDataSource}" Stroke ="DarkGreen"></d3:LineGraph>
                        <d3:CursorCoordinateGraph  Name="Cross" AutoHide="True" />
                    </d3:ChartPlotter>
                </TabItem>
                <TabItem Header="【挠度曲线】" FontSize="15" Padding="5" IsEnabled="True" >
                    <d3:ChartPlotter x:Name="MQWL_ChartPlotter2"  Margin="5,5,5,5" >
                        <d3:VerticalAxisTitle x:Name="AxisY_Default_Title2" Content="检测值"/>
                        <d3:HorizontalAxisTitle x:Name="AxisX_Title2" Content="时间"/>
                        <d3:AxisGrid Visibility ="Hidden"></d3:AxisGrid>
                        <!--添加挠度曲线-->
                        <d3:LineGraph Name="LineKFY04" StrokeThickness="0.6" DataSource="{Binding PlotLines[17].LineDataSource}" Stroke ="Red"></d3:LineGraph>
                        <d3:LineGraph Name="LineKFY05" StrokeThickness="0.6" DataSource="{Binding PlotLines[18].LineDataSource}" Stroke ="DarkGreen"></d3:LineGraph>
                        <d3:LineGraph Name="LineKFY06" StrokeThickness="0.6" DataSource="{Binding PlotLines[19].LineDataSource}" Stroke ="Blue"></d3:LineGraph>
                        <d3:LineGraph Name="LineKFY07" StrokeThickness="0.6" DataSource="{Binding PlotLines[20].LineDataSource}" Stroke ="DarkMagenta"></d3:LineGraph>
                        <d3:LineGraph Name="LineKFY08" StrokeThickness="0.6" DataSource="{Binding PlotLines[21].LineDataSource}" Stroke ="LawnGreen"></d3:LineGraph>
                        <d3:LineGraph Name="LineKFY09" StrokeThickness="0.6" DataSource="{Binding PlotLines[22].LineDataSource}" Stroke ="Aqua"></d3:LineGraph>
                        <d3:CursorCoordinateGraph  Name="Cross2" AutoHide="True" />
                    </d3:ChartPlotter>
                </TabItem>
            </TabControl>

            <!--左屏底端，提醒、警告信息栏-->
            <Label Content="{Binding Dev.PIDInfo }"  FontSize="18" FontWeight="Bold" Foreground="#FFFF7400"
                   Grid.Row="3" Margin="5"  HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding Dev.IsPIDInfoShow ,Converter={StaticResource BVConverter}}"/>
        </Grid>

        <!--=========================================左右屏纵向分割线==========================================================-->
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="3" HorizontalAlignment="Center" VerticalAlignment="stretch"/>

        <!--=========================================右半屏，试验基本信息及控制==========================================-->
        <Grid Grid.Row="1" Grid.Column="2" VerticalAlignment="stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" MinHeight="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!--右半屏标题-->
            <Label Content="试验信息及控制（抗风压反复加压检测，P2）" FontSize="24" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!--试验信息-->
            <Border Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="stretch" VerticalAlignment="stretch" CornerRadius="5" Background="LightGray">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto" MinHeight="50"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" HorizontalAlignment="stretch" VerticalAlignment="Top">
                        <Label Content="试验编号" FontSize="20" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                        <Label Content="{Binding ExpDQ.ExpSettingParam.ExpNO,Mode=OneWay}" Style="{StaticResource Label4}"/>
                        <Label Content="检测模式" FontSize="20" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                        <Label Content="{Binding ExpDQ.Exp_KFY.IsGC,Mode=OneWay, Converter={StaticResource ExpTypeConverter}}" Style="{StaticResource Label4}"/>
                        <Label Content="当前项目" FontSize="20" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                        <Label Content="{Binding ExpDQ.Exp_KFY.Stage_DQ.Stage_Name,Mode=OneWay}" Style="{StaticResource Label4}"/>
                        <Label Content="当前步骤" FontSize="20" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                        <Label Content="{Binding ExpDQ.Exp_KFY.Step_DQ.StepName,Mode=OneWay}" Style="{StaticResource Label4}"/>
