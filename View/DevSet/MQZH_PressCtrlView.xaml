<Window x:Class="MQZHWL.View.Others.MQZH_PressCtrlView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MQZHWL.View.Others"
        xmlns:converterPath="clr-namespace:MQZHWL.UICtl.Converter"
        mc:Ignorable="d"
        Title="幕墙四性—气压控制参数设置" Height="650" Width="1200"
        MinWidth="600" MinHeight="500"
        WindowStartupLocation="CenterScreen" Background="White" ShowInTaskbar="True"
        Closing="Window_Closing" WindowState="Normal " ResizeMode ="CanMinimize"
        DataContext ="{Binding Source ={StaticResource Locator },Path =Main_ViewModel}">

    <Window.Resources>
        <!--普通按钮模板-->
        <ControlTemplate TargetType="{x:Type Button}" x:Key="Button1">
            <Border Margin ="10,5,10,5" Background="LightGray" x:Name="back" BorderBrush="Black" BorderThickness="0.8"
                    CornerRadius="3" Padding="5"
                    TextBlock.Foreground="Black" TextBlock.FontSize="18" Width="100" Height ="40">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="back"  Property="Background" Value="snow"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="back" Property="Background" Value="CadetBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--Label模板1，参数名-->
        <Style x:Key="Label1" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,5,5,5"/>
        </Style>
        <!--Label模板2，提示信息-->
        <Style x:Key="Label2" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="Coral"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--TextBox模板1，参数信息-->
        <Style x:Key="TextBox1" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        </Style>
        <!--默认CheckBox样式-->
        <Style TargetType="CheckBox">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Tag">
                    <Setter.Value>
                        <SolidColorBrush Color="Black"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="bd" BorderBrush="Black" 
                                        BorderThickness="2" Margin="5,2">
                                    <Path x:Name="cp" Width="15" Height="15"  
                                          Stroke="Blue"  
                                          StrokeThickness="3"/>
                                </Border>
                                <ContentPresenter/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cp" Property="Data"  
                                            Value="M 0,6 L 6,12 12,0"/>
                                    <Setter TargetName="bd" 
                                            Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Blue"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
        <!--值转换器-->
        
    </Window.Resources>

    <Grid Background ="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0" Grid.ColumnSpan ="3"  HorizontalAlignment=" stretch" Margin ="5">
            <!--压力允许偏差-->
            <TabItem Header="一般参数，气密参数" FontSize="15">
                <Grid   Background ="DarkGray">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="小差压控制允许偏差（Pa）" Grid.Row ="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black" >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto "/>
                            </Grid.ColumnDefinitions>
                            <Label Content="偏差1（0～50Pa）：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="偏差2（50～100Pa）：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="偏差3（100～500Pa）：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="偏差4（500Pa以上）：" Grid.Row="6" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrQM[0], Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrQM[1], Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrQM[2], Mode=TwoWay}" Grid.Row="2" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrQM[3], Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="大差压控制允许偏差（Pa）" Grid.Row ="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black" >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto "/>
                            </Grid.ColumnDefinitions>
                            <Label Content="偏差1（0～1000Pa）：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="偏差2（1000～3000Pa）：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="偏差3（3000～5000Pa）：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="偏差7（5000Pa以上）：" Grid.Row="6" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrBigCY[0], Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrBigCY[1], Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrBigCY[2], Mode=TwoWay}" Grid.Row="2" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.AllowablePressErrBigCY[3], Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="压力控制一般参数" Grid.Row ="0" Grid.RowSpan="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black" >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="预加压保持时间（s）：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="压力加载速度（Pa/s）：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_YJY, Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.LoadUpDownSpeed, Mode=TwoWay}"  Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="气密压力控制参数" Grid.Row ="0" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="气密检测保压时间（s）：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_QMStep, Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!--水密压力-->
            <TabItem Header="水密压力控制" FontSize="15" >
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <GroupBox Header="水密检测保压时间（s）" Grid.Row ="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black">
                        <Grid  Background="DarkGray">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto "/>
                            </Grid.ColumnDefinitions>
                            <Label Content="水密定级检测第1级保压时间：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="水密定级检测第2～8级保压时间：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="水密工程检测前喷水时间：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="水密工程检测可开启保压时间：" Grid.Row="3" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="水密工程检测固定有开启保压时间："  Grid.Row="4" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="水密工程检测固定无开启保压时间：" Grid.Row="5" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_SMFistStep, Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_SMDJ_StepLeft, Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.PlTime_SMGC_Before, Mode=TwoWay}" Grid.Row="2" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_SMGC_KKQ, Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_SMGC_YKQ, Mode=TwoWay}" Grid.Row="4" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_SMGC_WKQ, Mode=TwoWay}" Grid.Row="5" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="水密波动加压控制参数" Grid.Row ="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black">
                        <Grid  Background="DarkGray">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="水密波动高压比率：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="水密波动低压比率：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.HighRatioSM, Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.LowRatioSM, Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox1}"/>

                            <Label Content="波动压力准备保压时间（s）：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="波动切换高压调频比率：" Grid.Row="3" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="波动切换低压调频比率：" Grid.Row="4" Grid.Column ="0" Style="{StaticResource Label1}"/>

                            <TextBox Text="{Binding Dev.KeepingTime_SMPreparePress, Mode=TwoWay}"  Grid.Row="2" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.PhRatioWaveH, Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.PhRatioWaveL, Mode=TwoWay}" Grid.Row="4" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>


            <!--抗风压压力-->
            <TabItem Header="抗风压压力控制" FontSize="15" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="水密检测保压时间（s）" Grid.Row ="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black">
                        <Grid  Background="DarkGray">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto "/>
                            </Grid.ColumnDefinitions>
                            <Label Content="抗风压变形检测每级保持时间（s）：" Grid.Row="0" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="抗风压安全检测保持时间（p3,pmax）：" Grid.Row="1" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="抗风压反复波动次数：" Grid.Row="2" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="抗风压安全加压泄压速度：" Grid.Row="3" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="抗风压高压比率：" Grid.Row="4" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <Label Content="抗风压低压比率：" Grid.Row="5" Grid.Column ="0" Style="{StaticResource Label1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_KFY_BXstep, Mode=TwoWay}" Grid.Row="0" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.KeepingTime_KFY_AQ, Mode=TwoWay}" Grid.Row="1" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.WaveNum_KFYP2, Mode=TwoWay}" Grid.Row="2" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.LoadUpDownSpeed_KFRAQ, Mode=TwoWay}" Grid.Row="3" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.HighRatioKFY, Mode=TwoWay}" Grid.Row="4" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                            <TextBox Text="{Binding Dev.LowRatioKFY, Mode=TwoWay}" Grid.Row="5" Grid.Column ="1" Style="{StaticResource TextBox1}"/>
                        </Grid>
                    </GroupBox>
                   
                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="保存设置" Command="{Binding DevSetCommand}" CommandParameter="9" Grid.Row="1" Grid.Column ="2" Template="{StaticResource Button1}" HorizontalAlignment="Left" VerticalAlignment="Center" IsDefault="True"/>
        <Button Content="取消修改" Command="{Binding DevSetCommand}" CommandParameter="99"  Grid.Row="1" Grid.Column ="2" Template="{StaticResource Button1}" HorizontalAlignment="Right" VerticalAlignment="Center" IsCancel="True"/>
        <Label Content="此页内数据请勿擅自改动！！！！！" Margin ="10"  Grid.Row="1" Grid.Column ="0" Foreground="Red" Style="{StaticResource Label2}"/>

    </Grid>
</Window>